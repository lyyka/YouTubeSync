html
	head
		meta(
			charset="utf-8"
		)
		meta(
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		)
		title YouSync - Home
		//- font awesome
		link(
			rel="stylesheet"
			href="https://use.fontawesome.com/releases/v5.5.0/css/all.css"
			integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU"
			crossorigin="anonymous"
		)
		//- bootstrap
		link(
			rel="stylesheet"
			href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
			integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
			crossorigin="anonymous"
		)
		link(
			rel = "stylesheet"
			href = "/css/room.css"
		)
		link(
			rel = "stylesheet"
			href = "/css/footer.css"
		)
		link(
			rel = "stylesheet"
			href = "/css/general.css"
		)
		link(
			rel = "stylesheet"
			href = "/css/navigation.css"
		)
	body
		//- navigation is different for when in room
		nav(id="navigation")
			div(
				class="container-fluid"
				id="navigation-inner"
			)
				div(id="nav-logo")
					h3(class="red-text") YoutubeSync
				div(id="nav-icon-wrapper")
					div(id="nav-icon")
						span
						span
						span
						span
				div(id="nav-list-wrapper")
					ul(id="nav-list")
						li(class="nav-item")
							a(
								href="#notifications"
								id="show-notify"
							)
								i(
									class="fas fa-bell"
									
								) 
								| &nbsp;Notifications
						li(class="nav-item")
							a(
								href="#usersList"
								id="show-users"
							)
								i(
									class="fas fa-users"
									
								) 
								| &nbsp;Users
						li(class="nav-item")
							a(
								class="white-text red-bg nav-button"
								href="/join"
								id = "leave-room"
							) Leave room
		//- notificataions
		div(
			id="notification-list-wrapper"
			class="ws-div"
		)
			div(class="container")
				p(align="right")
					span(class="white-text cursor-pointer ws-div-control close-ws-div")
						i(class="fas fa-times") 
						| &nbsp;Close
					span(
						class="white-text cursor-pointer ws-div-control"
						id="clear-all-notifications"
					)
						i(class="fas fa-broom") 
						| &nbsp;Clear all
			div(
				id="notification-list"
				class="container"
			)
		//- users
		div(
			id="users-list-wrapper"
			class="ws-div"
		)
			div(class="container")
				p(align="right")
					span(class="white-text cursor-pointer ws-div-control close-ws-div")
						i(class="fas fa-times")
						| &nbsp;Close
			div(
				id="users-list"
				class="container"
			)
		//- video
		section(class="section container-fluid")
			h3(
				align="left"
				class="remove-margin-bottom white-text"
			) Choose video
			br
			div(id="change-video-div")
				input(
					id="embed-url"
					class="input"
					type="text"
					placeholder="Video URL"
				)
				button(
					id="change-btn"
					class="my-btn red-bg white-text"
					type="button"
				) Change
			br
			br
			div(id="video-wrapper")
				div(id="video")
				div(id="controls-wrapper")
					div(id="controls")
						button(
							id="play-btn"
							type="button"
						)
							i(class="fas fa-play")
						button(
							id="pause-btn"
							type="button"
						)
							i(class="fas fa-pause")
						label(id="videoTime") video time
		//- footer is different for when in room
		footer
			hr
			div(id="room-qr-code")
				h4 Scan QR code to connect to this room!
	script(
		src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"
	)
	script(
		src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"
		integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
		crossorigin="anonymous"
	)
	script(
		src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.0/socket.io.js"
		integrity="sha256-Thm9kMI2BQKxVnCWipQIGeb8QVl2lohO+WWWfCiF8b0="
		crossorigin="anonymous"
	)
	script(
		src = "https://www.youtube.com/iframe_api"
	)
	- const room = roomID;
	- const username = username;
	script(
		src="/js/room.js"
	)
	script(
		src="/js/qrcode.min.js"
	)
	script(
		src="/js/footer.js"
	)
	script(
		src="/js/navigation.js"
	)

